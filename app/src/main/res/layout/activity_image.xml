<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImageActivity">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/charmbold"
        android:text="ภาพวัดประกอบคำอธิบาย"
        android:textColor="@color/teal_200"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/te"

        />

    <TextView
        android:id="@+id/tv_temple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/charmbold"
        android:text="วัดมหาวาราม"
        android:textColor="@color/teal_200"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/te"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เพิ่มภาพวัด"
        android:fontFamily="@font/charmregular"
        android:textColor="#f20c36"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:textAlignment="center"
        android:id="@+id/txtAdd_image"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_temple"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"


            />







</LinearLayout>