<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="วัดมหาวานาราม"
            android:textStyle="bold"
            android:id="@+id/tv_temple_name"
            android:fontFamily="@font/charmregular"
            android:textSize="20sp"
            android:textColor="#F09"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_temple"
            app:layout_constraintBottom_toTopOf="@id/tv_temple_city"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_temple_city"
            android:text="เมืองอุบล"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/charmregular"
            android:textStyle="italic"
            android:textColor="@color/teal_200"
            android:textSize="20sp"
            android:paddingRight="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_temple_name"
            app:layout_constraintLeft_toRightOf="@id/img_temple"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/img_temple"
            android:src="@drawable/temple"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>